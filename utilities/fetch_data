#!/usr/bin/env bash

DEFAULT_HOST=192.168.1.9
DEFAULT_PORT=22
USER=media
REMOTE_SOURCE="~/TRAINING_DATA/"
LOCAL_DEST="TRAINING_DATA/RAW"

SCRIPT_DIR=$( cd -- "$( dirname -- "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )
PROJECT_DIR=$(dirname $SCRIPT_DIR)

HOST=${1:-$DEFAULT_HOST}
PORT=${2:-$DEFAULT_PORT}

rsync -avz -e "ssh -p $PORT" $USER@$HOST:$REMOTE_SOURCE $LOCAL_DEST